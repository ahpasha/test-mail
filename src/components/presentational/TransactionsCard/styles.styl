.refill-card
  display flex
  border 1px solid #d1d1d1
  border-radius 2px
  padding 3px 0

  &__controls
    padding 0 20px
    border-right 1px solid #d1d1d1
    font 15px/15px 'Roboto', sans-serif
    color #00bd97
    display flex
    align-items center

  &__button
    margin-right 10px

    &:last-child
      margin-right 0

  &__item
    display flex
    align-items center
    font 15px/15px 'Roboto', sans-serif
    color #00bd97
    flex-grow 1
    flex-shrink 0
    border-right 1px solid #d1d1d1
    padding 0 20px

    &:last-child
      border-right 0
      max-width 150px